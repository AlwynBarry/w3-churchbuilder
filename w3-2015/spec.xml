	<menu-renderer name="menu_spec_1">
		<wrapper>
			${children}
		</wrapper>
		<leaf name="">
			<a href="${href}" onclick="${onclick}" class="w3-bar-item w3-button main-nav-menu-item">${label}</a>
		</leaf>
		<submenu name="">
			<div class="w3-dropdown-hover main-nav-menu-dropdown">
				<button class="w3-button main-nav-menu-dropdown-button">${label} <i class="fa fa-caret-down"></i></button>
				<div class="w3-dropdown-content w3-bar-block w3-card-4 main-nav-menu-dropdown-content">
					${children}
				</div>
			</div>
		</submenu>
	</menu-renderer>
	
	<menu-renderer name="menu_spec_3">
		<wrapper>
			${children}
		</wrapper>
		<leaf name="">
			<a href="${href}"  onclick="${onclick}" class="w3-bar-item w3-button side-nav-menu-item">${label}</a>
		</leaf>
		<submenu name="">
			<div class="w3-dropdown-hover side-nav-menu-dropdown">
				<button class="w3-button side-nav-menu-dropdown-button">${label} <i class="fa fa-caret-down"></i></button>
				<div class="w3-dropdown-content w3-bar-block w3-card-4 side-nav-menu-dropdown-content">
					${children}
				</div>
			</div>			
		</submenu>
	</menu-renderer>


	<menu-renderer name="menu_spec_2">
		<wrapper>
			${children}
		</wrapper>
		<leaf name="">
			<a href="${href}"  onclick="${onclick}" class="w3-bar-item w3-button side-nav-menu-item">${label}</a>
		</leaf>
		<submenu name="">
			<div class="w3-dropdown-click side-nav-menu-dropdown">
				<button onclick="menuDropdown('${label}-content')" class="w3-button side-nav-menu-dropdown-button">${label} <i class="fa fa-caret-down"></i></button>
				<div id="${label}-content" class="w3-bar-block w3-card-4 side-nav-menu-dropdown-click-content w3-hide">
					${children}
				</div>
			</div>			
		</submenu>
	</menu-renderer>


	<custom type="loop" name="slider" description="Slider">
		<loopitemtype name="Image" description="Image">
			<item name="image" type="image" description="Image" />
			<item name="caption" type="text" description="Caption" />
			<item name="button" type="text" description="Button Text" />
			<item name="url" type="url" description="Button Target" />
			<html_inner>
				<![CDATA[
					<div class="w3-display-container mainSlider" style="width: 100%; height: 500px; background-image: url(${image:attr}); background-position: center; background-size: cover;">
						<div class="w3-display-middle w3-container w3-padding-16 mainSlider-text">
							<h1 class="mainSlider-header">${caption}</h1>
							<a class="w3-button w3-round primary-button mainSlider-button" href="${url:attr}">${button}</a>
						</div>
					</div>
				]]>
			</html_inner>
		</loopitemtype>
	</custom>


	<custom type="loop" name="upcoming" description="Events">
		<item type="text" name="max_elements" default="4" description="Max elements" />
		<loopitemtype name="default" description="Default">
			<item type="url" name="url" description="Click URL" />
			<item type="text" name="title" description="Title" />
			<item type="date" name="date" description="Date" />
			<html_inner>
				<![CDATA[
					<div class="w3-card-4 upcoming-date-line">
						<div class="w3-cell-row w3-padding-16 w3-margin upcoming-date-row">
							<div class="w3-container w3-cell w3-cell-middle upcoming-date-day">${date:human-date}</div>
							<div class="w3-container w3-cell w3-cell-middle upcoming-date-detail">
								<span class="upcoming-date-title">${title}</span><br/>
								<span class="upcoming-date-time">${date:human-time}</span>
							</div>
							<div class="w3-cell w3-cell-middle w3-center upcoming-date-button-container">
								<a class="w3-button w3-circle upcoming-date-button" onclick="${onclick}" href="${url:attr}">
									<i class="fa fa-chevron-right w3-large"></i>
								</a>
							</div>
						</div>
					</div>
				]]>
			</html_inner>
		</loopitemtype>
	</custom>


	<custom type="loop" name="newsloop" description="News loop">
		<item type="text" name="max_elements" default="4" description="Max News Itemss" />
		<loopitemtype name="default" description="Item">
			<item type="text" name="url" description="URL" />
			<item type="text" name="title" description="Title" />
			<item type="text" name="shortsummary" description="Short Summary" />
			<html_inner>
				<![CDATA[
					<div class="w3-card-4 news-item">
						<div class="w3-cell-row w3-padding-16 w3-margin news-item-row">
							<div class="w3-container w3-cell w3-cell-middle news-item-detail">
								<span class="news-item-title">${title}</span><br/>
								<span class="news-item-summary">${shortsummary}</span>
							</div>
							<div class="w3-cell w3-cell-middle w3-center news-item-button-container">
								<a class="w3-button w3-circle news-item-button" onclick="${onclick}" href="${url:attr}">
									<i class="fa fa-chevron-right w3-large"></i>
								</a>
							</div>
						</div>
	                </div>
				]]>
			</html_inner>
		</loopitemtype>
	</custom>

	
	<custom type="loop" name="boxes" description="Boxes">
		<loopitemtype name="Boxes" description="Item">
			<item name="title" type="text" description="Title" />
			<item name="image" type="image" description="Image" />
			<item name="caption" type="text" description="Caption" />
			<item type="url" name="url" description="Click URL" />
			<html_inner>
			<![CDATA[
				<div class="w3-padding box" style="width: 300px;">
					<div class="w3-card-4 w3-white w3-margin-bottom box-card">
						<div class="box-image" style="background-image: url(${image:attr}); height: 200px; width: 100%; background-position: center; background-size: cover;"></div>
						<div class="w3-container w3-padding-16 w3-center box-content">
							<h3 class="box-header">${title}</h3>
							<p class="box-caption">${caption}</p>
							<a class="w3-button w3-round primary-button box-button" href="${url:attr}">Find out more</a>
						</div>
					</div>
				</div>
			]]>
			</html_inner>
		</loopitemtype>
	</custom>


	<custom type="loop" name="leaders" description="Leaders">
		<loopitemtype name="Leader" description="Item">
			<item name="image" type="image" description="Image" aspect="1" />
			<item name="name" type="text" description="Name" />
			<item name="description" type="text" description="description" />
			<item type="text" name="url" description="URL" />
			<html_inner>
			<![CDATA[
				<div class="w3-padding leader" style="width: 240px;">
					<div class="w3-card-4 w3-white w3-margin-bottom leader-card">
						<div class="leader-photo" style="background-image: url(${image:attr}); height: 200px; width: 100%; background-position: center; background-size: cover;"></div>
						<div class="w3-container w3-padding-16 w3-center leader-info">
							<h3 class="leader-name">${name}</h3>
							<p class="leader-description">${description}</p>
							<a class="w3-button w3-round primary-button leader-button ${url:disabler}" href="${url:scramble}">Contact</a>
						</div>
					</div>
				</div>
			]]>
			</html_inner>
		</loopitemtype>
	</custom>


	<custom type="loop" name="social" description="Social Media Icons">
		<loopitemtype name="Icon" description="Item">
			<item type="enum" name="type" description="Type"
				options="rss,facebook,twitter,pinterest,instagram,youtube" />
			<item type="url" name="url" description="URL" />
			<html_inner>
			<![CDATA[
				<a class="social-icon social-${type}" href="${url}"><i class="fa fa-${type}" aria-hidden="true"></i> </a>
			]]>
			</html_inner>
		</loopitemtype>
	</custom>


